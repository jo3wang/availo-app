rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public occupancy data - anyone can read live status
    match /lounge_status/{deviceId} {
      allow read: if true;
      // Writes only via Admin SDK (Cloud Functions)
      allow write: if false;
    }

    // Device registry - read-only for authenticated users
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      // Writes only via Admin SDK (Cloud Functions)
      allow write: if false;
    }

    // Historical occupancy data - read-only for authenticated users
    match /occupancy_history/{docId} {
      allow read: if request.auth != null;
      // Writes only via Admin SDK (Cloud Functions)
      allow write: if false;
    }

    // Daily analytics - read-only for authenticated users
    match /daily_analytics/{docId} {
      allow read: if request.auth != null;
      // Writes only via Admin SDK (Cloud Functions)
      allow write: if false;
    }

    // User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
